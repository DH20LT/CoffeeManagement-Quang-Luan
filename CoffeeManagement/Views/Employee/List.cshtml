@model IEnumerable<CoffeeManagement.Models.Employees.Employee>

<!DOCTYPE html>

<html>
<head>
    <title>List all Employees</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
	<button type="button" class="btn btn-primary">
		<a asp-action="~/Views/Customer/List.cshtml" class="text-decoration-none text-white">Đăng nhập</a>
	</button>
	<button type="button" class="btn btn-primary">
		<a asp-action="~/Views/Customer/List.cshtml" class="text-decoration-none text-white">Đăng ký</a>
	</button>
	<div>
        <h1>List all Employees</h1>
        
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Department</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.ID</td>
                        <td>@employee.Name</td>
                        <td>@employee.Department</td>
                        <td>
                            <button type="button" class="btn btn-info">
                                <a asp-action="UpdateEmployee" asp-route-ID="@employee.ID">Cập Nhật</a>
                            </button>
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger">
                                <a asp-action="DeleteEmployee" asp-controller="Employee" asp-route-ID="@employee.ID">Xóa</a>
                            </button>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <button type="button" class="btn btn-primary">
            <a asp-action="AddEmployee" class="text-decoration-none text-white">Thêm Nhân Viên</a>
        </button>
        <button type="button" class="btn btn-primary">
            <a asp-controller ="~View/Customer/List" class="text-decoration-none text-white">Khách hàng</a>
        </button>
        <button type="button" class="btn btn-primary">
            <a asp-controller="~View/Order/List" class="text-decoration-none text-white">Thực đơn</a>
        </button>
    </div>
</body>
</html>